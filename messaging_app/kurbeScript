#!/bin/bash
# kurbeScript - Start and verify Kubernetes cluster with Minikube

set -e

if ! command -v minikube &> /dev/null; then
    echo "âŒ Minikube not found. Please install Minikube first."
    exit 1
fi

if ! command -v kubectl &> /dev/null; then
    echo "âŒ kubectl not found. Please install kubectl first."
    exit 1
fi

echo "ğŸš€ Starting Kubernetes cluster using Minikube..."

if minikube status &> /dev/null | grep -q "Running"; then
    echo "âš¡ Minikube is already running."
else
    minikube start --driver=docker
fi

echo "âœ… Kubernetes cluster is up."
echo "ğŸ” Checking cluster info..."
kubectl cluster-info
echo "ğŸ“¦ Retrieving available pods..."
kubectl get pods --all-namespaces
echo "ğŸ‰ Kubernetes setup verification complete."
